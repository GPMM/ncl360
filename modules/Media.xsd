<schema targetNamespace="http://www.ncl.org.br/NCL360/Media"
        xmlns="http://www.ncl.org.br/NCL360/Media"
        elementFormDefault="unqualified">



<complexType name="areaType">
   <attribute name="id" type="ID" use="required"/>
   <attribute name="begin" type="string" use="optional"/>
   <attribute name="end" type="string" use="optional"/>
</complexType>


<complexType name="mediaType">
   <attribute name="id" type="ID" use="required"/>
   <attribute name="src" type="anyURI" use="required"/>
   <attribute name="descriptor" type="string" use="required"/>
   <sequence>
      <element name="area" type="areaType" minOccurs="0" maxOccurs="unbounded"/>
   </sequence>
</complexType>

</schema>
